CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
CFLAGS = -Wall -Werror -Wextra -pedantic
NAME = school

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(NAME): $(OBJ)
	$(CC) $^ -o $@

%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
	-@$(RM) $(NAME)

.PHONY: all clean oclean fclean re
